<% if current_user == @event.user %>
<h1 class="text-center">Créer un événement</h1>
</br>
<div class="container w-50">

<%= form_tag url_for(action: 'update'), method: "patch" do %>
  <div class="form-group">
  <%= label_tag 'Title' %>
  <%= text_field_tag 'title', @event.title, class: 'form-control' %>
  </div>
  <div class="form-group">
  <%= label_tag 'Body' %>
  <%= text_area_tag 'body', @event.description, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag 'Durée(en min)' %>
    <%= text_field_tag 'duration', @event.duration, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag 'Price' %>
    <%= text_field_tag 'price', @event.price, class: 'form-control' %>
  </div>
  <div class="form-group">
      <%= label_tag 'Location' %>
      <%= text_field_tag 'location', @event.location, class: 'form-control' %>
  </div>
  <div class="form-group">
      <%= label_tag 'Date de début' %>
      <%= text_field_tag 'start_date', @event.start_date, class: 'form-control' %>
  </div>
  <%= submit_tag 'Editer  évènement', class: 'btn btn-primary' %>
<% end %>
  <p><%= link_to 'Détruire cet évènement', event_path(@event.id),
    method: :delete,
    data: { confirm: 'Are you sure?' } %></p>
</div>
<% else %>
  <h1>Tu ne devrais pas être ici</h1>
<% end %>